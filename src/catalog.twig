{% extends "layouts/dop-lay.twig" %}

{% block page %}
	<div class="container">
		{% include '/blocks/breadcrumps/breadcrumps.twig' %}
		<h2 class="catalog__title about__title">ортопедическая обувь</h2>
		
		<div class="catalog__content row">
			{% include '/blocks/catalog-sidebar/catalog-sidebar.twig' %}
			<div class="catalog__content-items col-xl-9">
				{% include '/blocks/catalog-sort/catalog-sort.twig' %}
				<div class="catalog__content-items-block row px-3">
					{% for item in 0..2 %}
						<div class="catalog-item-wrapper col-xl-4">
							{% include '/blocks/catalog-item/catalog-item.twig' %}
						</div>
					{% endfor %}
					
				</div>
				<div class="px-3">
					{% include '/blocks/catalog-banner/catalog-banner.twig' %}
				</div>
				<div class="catalog__content-items-block row px-3">
					{% for item in 0..2 %}
						<div class="catalog-item-wrapper col-xl-4">
							{% include '/blocks/catalog-item/catalog-item.twig' %}
						</div>
					{% endfor %}
					
				</div>
			</div>
		</div>
	</div>
	{% include '/blocks/catalog-item-popup/catalog-item-popup.twig' %}
	{% include '/blocks/catalog-item-popup-success/catalog-item-popup-success.twig' %}
{% endblock %}
